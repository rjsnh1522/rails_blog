<div id="post_show_content" class="skinny_wrapper">
  <header>
    <p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
    <h1><%=@post.title %></h1>
    <hr>
  </header>
  <div id="content">
    <%= markdown @post.content %>
  </div>
  <hr>
  <div id="share_box">
    <p>Share The Do List</p>

    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title%> by @chotaWolverine -&amp;url=<%= url_for([@post,{only_path:false}])%>','_blank','width=800,height=500,top=200,left=300');void(0);"><i class="fa fa-twitter"></i></a>

    <a href=""><i class="fa fa-facebook"></i>
    </a>
    <a href=""><i class="fa fa-google-plus"></i>
    </a>
  </div>
  <hr>
</div>

<br>
<br>

<%= link_to "Edit" ,edit_post_path(@post) %>
<%= link_to "Delete" ,post_path(@post),method: :delete, data:{confirm:"Are you sure you want to delete this post"} %>